<UserControl x:Class="Boxer.Views.FolderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="300" Width="300">
    <UserControl.DataContext>
        <Binding Path="FolderView" Source="{StaticResource Locator}"/>
    </UserControl.DataContext>
    <Grid>
        <Label Content="Folder Name: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="93,13,0,0" TextWrapping="Wrap" Text="{Binding Folder.Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</UserControl>
